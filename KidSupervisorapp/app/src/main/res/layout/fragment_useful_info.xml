<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Useful_info">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="295dp"
            android:layout_height="440dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/image1"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Articles to read:"
            android:layout_gravity="center"
            android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="400dp"
        android:paddingStart="@dimen/_2sdp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:clickable="true"
        android:linksClickable="true"
        android:textSize="10dp"
        android:onClick="openUrl"
        android:text="https://www.healthychildren.org/English/ages-stages/baby/sleep/Pages/A-Parents-Guide-to-Safe-Sleep.aspx"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
        <TextView
            android:layout_width="400dp"
            android:paddingStart="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:paddingTop="@dimen/_2sdp"
            android:linksClickable="true"
            android:textSize="10dp"
            android:onClick="openUrl"
            android:text="https://www.sleepfoundation.org/infants-and-sleep"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
        <TextView
            android:layout_width="400dp"
            android:paddingStart="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:paddingTop="@dimen/_2sdp"
            android:linksClickable="true"
            android:textSize="10dp"
            android:onClick="openUrl"
            android:text="https://www.mayoclinic.org/healthy-lifestyle/infant-and-toddler-health/in-depth/healthy-baby/art-20046051"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
        <TextView
            android:layout_width="400dp"
            android:paddingStart="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:paddingTop="@dimen/_2sdp"
            android:linksClickable="true"
            android:textSize="10dp"
            android:onClick="openUrl"
            android:text="https://www.cdc.gov/sids/index.htm"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
        <TextView
            android:layout_width="400dp"
            android:paddingStart="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:paddingTop="@dimen/_2sdp"
            android:linksClickable="true"
            android:textSize="10dp"
            android:onClick="openUrl"
            android:text="https://www.health.harvard.edu/sleep/healthy-sleep-for-new-and-expectant-mothers"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </LinearLayout>
</ScrollView>

</LinearLayout>